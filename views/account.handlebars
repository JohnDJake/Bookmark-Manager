<div class="container">
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2 xl6 offset-xl3">
            <h1>Sign in to Bookmark Manager</h1>
            <form id="login-form">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" name="username" id="username_input">
                        <label for="username">Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="password" name="password" id="password_input">
                        <label for="password">Password</label>
                    </div>
                </div>
                <button type="submit" class="waves-effect waves-light btn cyan">Sign in</button>
            </form>
        </div>
    </div>
</div>

<script>
    $(() => {
        $("#login-form").submit(event => {
            event.preventDefault();
            $.post("/login", { username: $("input[name=username]").val(), password: $("input[name=password]").val() })
                .then(() => setTimeout(() => location.replace("/"), 500)).fail(err => alert(err.responseText));
        })
    })
</script>